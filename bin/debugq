#!/bin/bash

q_dir=$(dirname $0)/../q
log_dir=${q_dir}/logs

while [ "$1" != "" ]; do
    case $1 in
        -p | --app )
                shift
                app=$1
                ;;
    esac
    shift
done

if [[ "$app" == "" ]]; then
    echo "Error: -a, --app argument is needed"
    exit 1
fi

tplog_dir=/mnt/efs/tplog
mkdir -p $tplog_dir

log_file=${log_dir}/${app}.$(hostname).$(date +%Y%m%dD%H%M%S)
mkdir -p $log_dir

cd $q_dir

case "$app" in
    tick )
        q tick.q sym $tplog_dir -p 5010 -c 30 200 -e 1
        ;;
    tick-asg )
        q tickasg.q sym $tplog_dir -p 5010 -c 30 200 -e 1
        ;;
    r )
        q tick/r.q $TPHOST:5010 $GWHOST:5012 -p 5015 -c 30 200 -e 1
        ;;
    r-asg )
        q asg/r.q $TPHOST:5010 $GWHOST:5012 -p 5015 -c 30 200 -e 1
        ;;
esac
